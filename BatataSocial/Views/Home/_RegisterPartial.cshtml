@model BatataSocial.Models.RegisterViewModel


    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3 class="form-signin-heading">Criar nova conta.</h3>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.User, new { @class = "sr-only " })
            <div class="">
                @Html.TextBoxFor(m => m.User, new { @class = "form-control", @placeholder = "Digite seu usuario" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "sr-only " })
            <div class="">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Digite seu email" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "sr-only " })
            <div class="">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Digite sua senha" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
            <div class="">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirme sua senha" })
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" class="btn btn-lg btn-success btn-block" value="Registrar" />
            </div>
        </div>
    }


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
